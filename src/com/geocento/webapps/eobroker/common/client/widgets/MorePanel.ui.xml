<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:design="urn:import:gwt.material.design.client.ui">
    <ui:style>

        .morePanel {
            position: absolute;
            bottom: 0px;
            width: 100%;
            height: 40px;
            line-height: 40px;
        }

        .moreBackground {
            opacity: 0.5;
            background: white;
        }

        .moreLabel {
            text-align: center;
            font-size: 0.9em;
            cursor: pointer;
        }
        .moreLabel:hover {
            background: white;
        }

    </ui:style>
    <design:MaterialPanel>
        <design:MaterialPanel layoutPosition="RELATIVE">
            <g:HTMLPanel ui:field="content"></g:HTMLPanel>
            <g:HTMLPanel addStyleNames="{style.morePanel}, {style.moreBackground}" ui:field="moreBackground">
            </g:HTMLPanel>
            <g:HTMLPanel addStyleNames="{style.morePanel}, {style.moreLabel}" ui:field="moreLabel">Show more...</g:HTMLPanel>
        </design:MaterialPanel>
    </design:MaterialPanel>
</ui:UiBinder>