<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:design="urn:import:gwt.material.design.client.ui"
             xmlns:widgets="urn:import:com.geocento.webapps.eobroker.common.client.widgets">
    <widgets:MaterialFileUploader acceptedFiles="image/*" url="" maxFileSize="100" height="auto" width="auto" display="INLINE_BLOCK" paddingLeft="50" shadow="0" ui:field="imageUploader">
        <design:MaterialCard>
            <design:MaterialCardImage>
                <design:MaterialImage ui:field="iconPreview"/>
            </design:MaterialCardImage>
            <design:MaterialCardContent layoutPosition="RELATIVE">
                <design:MaterialLabel ui:field="iconName" text="" fontSize="1.5em"/>
                <design:MaterialLabel ui:field="iconSize" text="" fontSize="0.8em"/>
                <design:MaterialProgress ui:field="iconProgress" layoutPosition="ABSOLUTE" bottom="0" left="0" type="DETERMINATE" percent="0" />
                <design:MaterialButton design:id="cardUpload" layoutPosition="ABSOLUTE" top="-25" right="25" type="FLOATING" backgroundColor="pink" size="LARGE" iconType="CLOUD_UPLOAD" iconColor="white"/>
            </design:MaterialCardContent>
        </design:MaterialCard>
    </widgets:MaterialFileUploader>
</ui:UiBinder>