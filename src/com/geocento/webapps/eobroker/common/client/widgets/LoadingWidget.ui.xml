<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui' xmlns:design="urn:import:gwt.material.design.client.ui">
    <ui:style>

        .loader {
            vertical-align: middle;
        }

    </ui:style>
    <g:HTMLPanel>
        <design:MaterialPreLoader addStyleNames="{style.loader}" size="SMALL">
            <design:MaterialSpinner color="blue-only"/>
        </design:MaterialPreLoader>
        <design:MaterialLabel display="INLINE_BLOCK" padding="10" ui:field="text"></design:MaterialLabel>
    </g:HTMLPanel>
</ui:UiBinder>