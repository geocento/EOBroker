<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui' xmlns:design="urn:import:gwt.material.design.client.ui"
             xmlns:maps="urn:import:com.geocento.webapps.eobroker.common.client.widgets.maps"
             xmlns:widgets="urn:import:com.geocento.webapps.eobroker.common.client.widgets">
    <ui:style>

        .panel {
            position: relative !important;
        }

        .fabPanel li, .fabPanel a {
            line-height: normal !important;
            height: auto;
        }

    </ui:style>
    <g:HTMLPanel addStyleNames="{style.panel}">
        <maps:ArcGISMap width="100%" height="100%" ui:field="mapContainer">
        </maps:ArcGISMap>
        <!-- FAB -->
        <design:MaterialFAB layoutPosition="ABSOLUTE" bottom="60" addStyleNames="{style.fabPanel}" ui:field="editButton">
            <design:MaterialTooltip text="Create" position="LEFT">
                <design:MaterialButton type="FLOATING" backgroundColor="red" iconType="EDIT" size="LARGE" opacity="1.0" ui:field="fabButton"/>
            </design:MaterialTooltip>
            <design:MaterialFABList>
                <design:MaterialTooltip text="Select an AoI or upload one" position="LEFT">
                    <design:MaterialAnchorButton type="FLOATING" waves="LIGHT" backgroundColor="green" iconType="SEARCH" ui:field="uploadFile"/>
                </design:MaterialTooltip>
                <design:MaterialTooltip text="Draw polygon" position="LEFT">
                    <design:MaterialAnchorButton type="FLOATING" waves="LIGHT" backgroundColor="blue" iconType="CREATE" ui:field="drawPolygon"/>
                </design:MaterialTooltip>
                <design:MaterialTooltip text="Clear AoI" position="LEFT">
                    <design:MaterialAnchorButton type="FLOATING" waves="LIGHT" backgroundColor="amber"  iconType="LAYERS_CLEAR" ui:field="clearAoIs"/>
                </design:MaterialTooltip>
            </design:MaterialFABList>
        </design:MaterialFAB>
    </g:HTMLPanel>
</ui:UiBinder>