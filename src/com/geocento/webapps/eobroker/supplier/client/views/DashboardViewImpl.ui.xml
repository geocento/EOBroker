<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:design="urn:import:gwt.material.design.client.ui"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:widgets="urn:import:com.geocento.webapps.eobroker.supplier.client.widgets"
        >
    <ui:style>
        .panel header {

        }

        .panel main, .panel footer {
        }

        .panel main {
            min-height: 80%;
            max-width: 960px;
            margin: 0 auto;
            overflow-y: auto;
        }

        .mainPanel {
            position: fixed;
            top: 64px;
            bottom: 0px;
            width: 100%;
            overflow-y: auto;
        }

        .navBrand {
            color: grey;
            padding-left: 20px;
            font-size: 1.4em;
        }

        .logoImage {
            display: block;
        }

        .section {
            margin: 7px 0;
            text-align: center;
            line-height: 50px;
            font-size: 28px;
            color: grey;
        }

        .services {
            margin: 20px 0px;
        }

        .companyWidget {
            display: inline-block;
        }

        .navBar {
            z-index: 1000;
        }

    </ui:style>
    <ui:with field="res" type="com.geocento.webapps.eobroker.supplier.client.styles.StyleResources"/>
    <g:HTMLPanel addStyleNames="{style.panel}">
        <header>
            <!-- NavBar -->
            <design:MaterialNavBar activates="sideNav" backgroundColor="grey" layoutPosition="FIXED" addStyleNames="{style.navBar}" ui:field="navBar">
                <design:MaterialNavSection flex="NONE">
                    <design:MaterialImage height="64px" resource="{res.logoEOBroker}" addStyleNames="{style.logoImage}" ui:field="logo"></design:MaterialImage>
                    <design:MaterialLabel text="Supplier dashboard" paddingLeft="50" fontSize="1.5em"></design:MaterialLabel>
                </design:MaterialNavSection>
                <design:MaterialNavSection float="RIGHT">
                    <design:MaterialTooltip text="Orders" position="BOTTOM">
                        <design:MaterialLink iconType="SHOP" iconPosition="NONE"/>
                    </design:MaterialTooltip>
                    <design:MaterialTooltip text="Notifications" position="BOTTOM">
                        <design:MaterialLink activates="sideNav" iconType="NOTIFICATIONS" iconPosition="NONE"/>
                    </design:MaterialTooltip>
                    <design:MaterialTooltip text="Sign-in" position="BOTTOM">
                        <design:MaterialLink ui:field="signIn" iconType="FACE" iconPosition="NONE"/>
                    </design:MaterialTooltip>
                </design:MaterialNavSection>
            </design:MaterialNavBar>
        </header>

        <design:MaterialContainer fontSize="0.8em" paddingTop="64">

            <design:MaterialTitle title="Messages"></design:MaterialTitle>
            <g:HTMLPanel addStyleNames="{style.services}">
                List of notifications and messages...
            </g:HTMLPanel>

            <design:MaterialTitle title="Your company"></design:MaterialTitle>
            <widgets:CompanyWidget addStyleNames="{style.companyWidget}" ui:field="companyWidget"></widgets:CompanyWidget>
            <g:HTMLPanel>
                <design:MaterialButton backgroundColor="blue" text="Edit Company" ui:field="editCompany"></design:MaterialButton>
            </g:HTMLPanel>

            <design:MaterialTitle title="Your services"></design:MaterialTitle>
            <g:HTMLPanel addStyleNames="{style.services}" ui:field="services">
            </g:HTMLPanel>
            <design:MaterialButton backgroundColor="blue" text="Add new service" ui:field="addService"></design:MaterialButton>

            <design:MaterialTitle title="Your datasets"></design:MaterialTitle>
            <g:HTMLPanel addStyleNames="{style.services}" ui:field="datasets">
            </g:HTMLPanel>
            <design:MaterialButton backgroundColor="blue" text="Add new dataset" ui:field="addDataset"></design:MaterialButton>

        </design:MaterialContainer>
        <design:MaterialFooter backgroundColor="blue">
            <design:MaterialFooterCopyright>
                <design:MaterialLabel text="Â© 2016 Copyright Geocento Ltd" />
            </design:MaterialFooterCopyright>
        </design:MaterialFooter>

    </g:HTMLPanel>
</ui:UiBinder>
