<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:design="urn:import:gwt.material.design.client.ui"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:widgets="urn:import:com.geocento.webapps.eobroker.supplier.client.widgets"
             xmlns:views="urn:import:com.geocento.webapps.eobroker.supplier.client.views"
        >
    <ui:style>
        .panel header {

        }

        .panel main, .panel footer {
        }

        .panel main {
            min-height: 80%;
            max-width: 960px;
            margin: 0 auto;
            overflow-y: auto;
        }

        .mainPanel {
            position: fixed;
            top: 64px;
            bottom: 0px;
            width: 100%;
            overflow-y: auto;
        }

        .navBrand {
            color: grey;
            padding-left: 20px;
            font-size: 1.4em;
        }

        .logoImage {
            display: block;
        }

        .section {
            margin: 7px 0;
            text-align: center;
            line-height: 50px;
            font-size: 28px;
            color: grey;
        }

        .services {
            margin: 20px 0px;
        }

        .companyWidget {
            display: inline-block;
        }

        .navBar {
            z-index: 1000;
        }

        .title > p {
            overflow: hidden;
            line-height: 1.2em;
            height: 2.4em;
            /* TODO - find something more cross browser */
            -webkit-line-clamp: 2;
            display: -webkit-box;
            -webkit-box-orient: vertical;
        }

    </ui:style>
    <ui:with field="res" type="com.geocento.webapps.eobroker.supplier.client.styles.StyleResources"/>
    <views:TemplateView titleText="Dashboard" ui:field="template">
        <design:MaterialPanel paddingBottom="50">
            <design:MaterialTitle title="Company"></design:MaterialTitle>
            <design:MaterialRow>
                <design:MaterialColumn grid="s12 m6 l4">
                    <design:MaterialImage ui:field="companyImage"></design:MaterialImage>
                </design:MaterialColumn>
                <design:MaterialColumn grid="s12 m6 l8">
                    <design:MaterialTitle title="" addStyleNames="{style.title}" ui:field="companyTitle"></design:MaterialTitle>
                </design:MaterialColumn>
            </design:MaterialRow>
            <g:HTMLPanel>
                <design:MaterialButton backgroundColor="blue" text="Edit Company" ui:field="editCompany"></design:MaterialButton>
            </g:HTMLPanel>

            <design:MaterialTitle title="On-demand services"></design:MaterialTitle>
            <design:MaterialRow addStyleNames="{style.services}" ui:field="services">
            </design:MaterialRow>
            <design:MaterialButton backgroundColor="blue" text="Add new service" ui:field="addService"></design:MaterialButton>

            <design:MaterialTitle title="Off the shelf data"></design:MaterialTitle>
            <design:MaterialRow addStyleNames="{style.services}" ui:field="productdatasets">
            </design:MaterialRow>
            <design:MaterialButton backgroundColor="blue" text="Add new data" ui:field="addProductDataset"></design:MaterialButton>

            <design:MaterialTitle title="Software solutions"></design:MaterialTitle>
            <design:MaterialRow addStyleNames="{style.services}" ui:field="softwares">
            </design:MaterialRow>
            <design:MaterialButton backgroundColor="blue" text="Add new software" ui:field="addSoftware"></design:MaterialButton>

            <design:MaterialTitle title="Projects"></design:MaterialTitle>
            <design:MaterialRow addStyleNames="{style.services}" ui:field="projects">
            </design:MaterialRow>
            <design:MaterialButton backgroundColor="blue" text="Add new project" ui:field="addProject"></design:MaterialButton>

            <design:MaterialTitle visible="false" title="Your datasets"></design:MaterialTitle>
            <design:MaterialRow visible="false" addStyleNames="{style.services}" ui:field="datasets">
            </design:MaterialRow>
            <design:MaterialButton visible="false" backgroundColor="blue" text="Add new dataset" ui:field="addDataset"></design:MaterialButton>
        </design:MaterialPanel>
    </views:TemplateView>
</ui:UiBinder>
