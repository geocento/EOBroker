<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:bubble="urn:import:gwt.material.design.addins.client.bubble"
             xmlns:design="urn:import:gwt.material.design.client.ui">
    <ui:style>

        .date {
            font-style: italic;
            text-align: right;
        }

        .description {
            overflow: hidden;
            line-height: 1.2em;
            height: 2.4em;
            /* TODO - find something more cross browser */
            -webkit-line-clamp: 2;
            display: -webkit-box;
            -webkit-box-orient: vertical;
            color: #ccc;
        }

    </ui:style>
    <bubble:MaterialBubble ui:field="panel">
        <design:MaterialImage float="LEFT" width="50px" ui:field="image"></design:MaterialImage>
        <design:MaterialPanel marginLeft="60">
            <design:MaterialLabel fontSize="1.4em" ui:field="title"></design:MaterialLabel>
            <design:MaterialLabel fontSize="1em" addStyleNames="{style.description}" ui:field="description"></design:MaterialLabel>
            <design:MaterialPanel>
                <design:MaterialLabel fontSize="0.8em" addStyleNames="{style.date}" ui:field="date"></design:MaterialLabel>
                <design:MaterialLink text="EDIT" textColor="white" ui:field="edit"></design:MaterialLink>
                <design:MaterialLink text="REMOVE" textColor="white" ui:field="remove"></design:MaterialLink>
            </design:MaterialPanel>
        </design:MaterialPanel>
    </bubble:MaterialBubble>
</ui:UiBinder>