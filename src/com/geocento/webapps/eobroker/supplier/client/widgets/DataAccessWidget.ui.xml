<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:design="urn:import:gwt.material.design.client.ui"
             xmlns:widgets="urn:import:com.geocento.webapps.eobroker.common.client.widgets"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:style>

        .pitch, .uri {

        }

        .content {

        }

        .panel {
            clear: both;
        }

    </ui:style>
    <design:MaterialPanel backgroundColor="white" padding="20" margin="10">
        <design:MaterialRow>
            <design:MaterialColumn grid="s12">
                <design:MaterialListBox ui:field="type"></design:MaterialListBox>
            </design:MaterialColumn>
            <design:MaterialColumn grid="s12">
                <design:MaterialTextBox placeholder="Your pitch on this data access" addStyleNames="{style.pitch}" ui:field="pitch"></design:MaterialTextBox>
            </design:MaterialColumn>
            <design:MaterialColumn grid="s8 m10 l10">
                <design:MaterialTextBox placeholder="Provide the uri for accessing the data" addStyleNames="{style.uri}" ui:field="uri"></design:MaterialTextBox>
            </design:MaterialColumn>
            <design:MaterialColumn grid="s4 m2 l2">
                <widgets:MaterialFileUploader acceptedFiles="image/*" url="" maxFileSize="100" height="auto" width="auto" shadow="0" ui:field="dataUploader">
                    <design:MaterialButton backgroundColor="pink" size="LARGE" iconType="CLOUD_UPLOAD" iconColor="white" ui:field="upload"></design:MaterialButton>
                </widgets:MaterialFileUploader>
            </design:MaterialColumn>
        </design:MaterialRow>
    </design:MaterialPanel>
</ui:UiBinder>