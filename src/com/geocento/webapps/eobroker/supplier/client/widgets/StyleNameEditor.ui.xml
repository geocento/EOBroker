<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:design="urn:import:gwt.material.design.client.ui"
             xmlns:fileuploader="urn:import:gwt.material.design.addins.client.fileuploader">
    <ui:style>

        .title h4 {
            margin: 10px !important;
        }

    </ui:style>
    <design:MaterialModal type="FIXED_FOOTER" dismissible="true" inDuration="500" outDuration="500" width="600px" overflow="HIDDEN">
        <design:MaterialModalContent>
            <design:MaterialTitle title="Choose a style" addStyleNames="{style.title}"></design:MaterialTitle>
            <design:MaterialPanel ui:field="listStyles"></design:MaterialPanel>
        </design:MaterialModalContent>
        <design:MaterialModalFooter>
            <design:MaterialButton marginRight="20" float="NONE" text="Cancel" backgroundColor="GREY" textColor="WHITE" textAlign="CENTER" ui:field="cancel"></design:MaterialButton>
            <design:MaterialButton marginRight="20" text="NEW" backgroundColor="BLUE" textColor="WHITE" textAlign="CENTER" ui:field="submit"></design:MaterialButton>
        </design:MaterialModalFooter>
    </design:MaterialModal>
</ui:UiBinder>