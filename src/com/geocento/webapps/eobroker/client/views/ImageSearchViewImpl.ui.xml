<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:m="urn:import:gwt.material.design.client.ui"
             xmlns:maps="urn:import:com.geocento.webapps.eobroker.client.widgets.maps"
             xmlns:widgets="urn:import:com.geocento.webapps.eobroker.client.widgets">

    <ui:with field="res" type="com.geocento.webapps.eobroker.client.styles.StyleResources"/>
    <ui:style>

        @external nav-wrapper;

        .panel header, .panel main, .panel footer {
        }

        .panel main {
            overflow-x: auto;
            height: 100%;
        }

        .label {
            margin: 24px;
        }

        .footer {
            position: fixed;
            width: 100%;
            bottom: 0px;
            padding-top: 0px !important;
        }

        .currentSearch {
            display: block;
            top: 0px;
            bottom: 0px;
            margin-right: 300px;
        }

        .textSearch {
            height: 100%;
        }

        .textSearch > input {
            display: inline-block !important;
            height: 100%;
        }

        .searchBar {
            display: inline-block;
            margin-right: 300px;
        }

        .navBar {
        }

        .navBar > .nav-wrapper {
            display: flex !important;
        }

        .providers {
            padding-left: 20px;
        }

    </ui:style>
    <g:HTMLPanel addStyleNames="{style.panel}">
        <header>
            <!-- NavBar -->
            <m:MaterialNavBar addStyleNames="{style.navBar}" activates="sideNav" ui:field="navBar" backgroundColor="blue">
                <m:MaterialNavSection flex="NONE">
                    <m:MaterialImage height="64px" resource="{res.logoEOBroker}"></m:MaterialImage>
                </m:MaterialNavSection>
                <m:MaterialLink text="Supplier" activates="provider" textColor="white" iconType="ARROW_DROP_DOWN" iconPosition="RIGHT" addStyleNames="{style.providers}" ui:field="providersLink"></m:MaterialLink>
                <widgets:MaterialSuggestion ui:field="textSearch" iconColor="white" backgroundColor="blue" addStyleNames="{style.textSearch}" placeholder="What are you looking for?" textColor="black" active="true" flex="AUTO"/>
                <m:MaterialNavSection flex="NONE" float="RIGHT">
                    <m:MaterialTooltip text="Orders" position="BOTTOM">
                        <m:MaterialLink iconType="SHOPPING_CART" iconPosition="NONE"/>
                    </m:MaterialTooltip>
                    <m:MaterialTooltip text="Notifications" position="BOTTOM">
                        <m:MaterialLink activates="sideNav" iconType="NOTIFICATIONS" iconPosition="NONE"/>
                    </m:MaterialTooltip>
                    <m:MaterialTooltip text="Sign-in" position="BOTTOM">
                        <m:MaterialLink ui:field="signIn" iconType="FACE" iconPosition="NONE"/>
                    </m:MaterialTooltip>
                </m:MaterialNavSection>
            </m:MaterialNavBar>
            <m:MaterialDropDown activator="provider" constrainWidth="true" ui:field="providerDropdown">
            </m:MaterialDropDown>
        </header>

        <m:MaterialContainer fontSize="0.8em" >
            <maps:ArcGISMap width="100%" height="100%" ui:field="mapContainer">
            </maps:ArcGISMap>
        </m:MaterialContainer>

        <!-- FAB -->
        <m:MaterialFAB>
            <m:MaterialTooltip text="Create" position="LEFT">
                <m:MaterialButton type="FLOATING" backgroundColor="red" iconType="ADD" size="LARGE"/>
            </m:MaterialTooltip>
            <m:MaterialFABList>
                <m:MaterialTooltip text="Theme" position="LEFT">
                    <m:MaterialAnchorButton type="FLOATING" waves="LIGHT" backgroundColor="blue" iconType="CREATE" ui:field="drawPolygon"/>
                </m:MaterialTooltip>
                <m:MaterialTooltip text="Mail " position="LEFT">
                    <m:MaterialAnchorButton type="FLOATING" waves="LIGHT" backgroundColor="amber"  iconType="LAYERS_CLEAR" ui:field="clearAoIs"/>
                </m:MaterialTooltip>
            </m:MaterialFABList>
        </m:MaterialFAB>
    </g:HTMLPanel>
</ui:UiBinder>
