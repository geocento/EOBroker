<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui' xmlns:design="urn:import:gwt.material.design.client.ui">
    <design:MaterialCard backgroundColor="indigo lighten-1">
        <design:MaterialCardImage waves="LIGHT">
            <design:MaterialImage ui:field="image"></design:MaterialImage>
        </design:MaterialCardImage>
        <design:MaterialCardContent>
            <design:MaterialImage layoutPosition="ABSOLUTE" marginTop="-32" height="32" ui:field="companyLogo"></design:MaterialImage>
            <design:MaterialLabel fontSize="1.5em" text="Description"/>
            <design:MaterialLabel ui:field="description"></design:MaterialLabel>
        </design:MaterialCardContent>
        <design:MaterialCardReveal>
            <design:MaterialLabel fontSize="1.5em" ui:field="title"/>
        </design:MaterialCardReveal>
        <design:MaterialCardAction ui:field="action">
            <design:MaterialLink iconType="ASSESSMENT" text="REQUEST QUOTE"></design:MaterialLink>
            <design:MaterialLink iconType="INFO" text="MORE INFORMATION"></design:MaterialLink>
        </design:MaterialCardAction>
    </design:MaterialCard>
</ui:UiBinder>