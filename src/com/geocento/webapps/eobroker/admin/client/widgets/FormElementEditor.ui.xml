<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui' xmlns:design="urn:import:gwt.material.design.client.ui">
    <g:HTMLPanel>
        <design:MaterialCard backgroundColor="WHITE">
            <design:MaterialCardContent textColor="BLACK">
                <design:MaterialCardContent textColor="BLACK" ui:field="content">
                    <design:MaterialCardTitle text="EDIT FORM ELEMENT"></design:MaterialCardTitle>
                    <design:MaterialTextBox placeholder="name" ui:field="name"></design:MaterialTextBox>
                    <design:MaterialTextArea placeholder="description" ui:field="description"></design:MaterialTextArea>
                    <design:MaterialTextBox placeholder="Form ID (camel case format)" ui:field="formId"></design:MaterialTextBox>
                    <g:HTMLPanel ui:field="additionalFields"></g:HTMLPanel>
                </design:MaterialCardContent>
            </design:MaterialCardContent>
            <design:MaterialCardAction textColor="WHITE">
                <design:MaterialLink iconType="SAVE" text="OK" ui:field="save"></design:MaterialLink>
                <design:MaterialLink iconType="CANCEL" text="CANCEL" ui:field="cancel"></design:MaterialLink>
            </design:MaterialCardAction>
        </design:MaterialCard>
    </g:HTMLPanel>
</ui:UiBinder>