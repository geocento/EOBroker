<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:design="urn:import:gwt.material.design.client.ui"
             xmlns:views="urn:import:com.geocento.webapps.eobroker.customer.client.views"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
        >
    <ui:style field="style" type="com.geocento.webapps.eobroker.customer.client.views.FullViewImpl.Style">

        .panel {
            max-width: 960px;
            margin: 0px auto;
            padding: 0px;
        }

        .section {
            margin: 1em 0;
            font-size: 1.3em;
        }

        .subsection {
            font-size: 1.2em;
        }

        .image {
            width: 100%;
        }

        .tabsContent {
            position: relative;
            clear: both;
            padding: 10px 0px;
        }

        .tags {
            font-size: 1em;
            padding: 10px 0px;
        }

        .tabPanel {
            margin-bottom: 50px;
            padding: 20px 0px;
            border-bottom: 1px solid #c8ddd4;
        }

        .description {
            overflow: hidden;
            line-height: 1.2em;
            height: 2.4em;
            /* TODO - find something more cross browser */
            -webkit-line-clamp: 2;
            display: -webkit-box;
            -webkit-box-orient: vertical;
        }

        .title {
            font-size: 1.4em;
            margin: 10px 0px;
        }

        .vertical {
            -ms-transform: rotate(-90deg);
            -moz-transform: rotate(-90deg);
            -webkit-transform: rotate(-90deg);
            transform: rotate(-90deg);
            padding: 10px;
            text-transform: uppercase;
        }

        .tabsPanel {
            text-align: center;
        }

        .tabsPanel > * {
            max-width: 960px;
        }

        .colorPanel {
            position: absolute;
            z-index: 0;
            width: 100%;
            height: 100%;
            opacity: 0.1;
        }

    </ui:style>
    <views:TemplateView ui:field="template">
        <design:MaterialPanel addStyleNames="{style.panel}">
            <design:MaterialRow margin="0" padding="0" backgroundColor="BLUE_GREY" ui:field="navigation"></design:MaterialRow>
            <design:MaterialRow marginBottom="0" shadow="1" backgroundColor="white" paddingTop="10" paddingBottom="10">
                    <design:MaterialColumn grid="s12 m4 l4" paddingRight="30">
                        <design:MaterialImage addStyleNames="{style.image}" ui:field="image"></design:MaterialImage>
                    </design:MaterialColumn>
                    <design:MaterialColumn grid="s12 m8 l8">
                        <design:MaterialLabel title="" addStyleNames="{style.title}" ui:field="title"></design:MaterialLabel>
                        <design:MaterialLabel addStyleNames="{style.description}" ui:field="description"></design:MaterialLabel>
                        <g:HTMLPanel addStyleNames="{style.tags}" ui:field="tags"></g:HTMLPanel>
                    </design:MaterialColumn>
            </design:MaterialRow>
            <design:MaterialPanel backgroundColor="blue" addStyleNames="{style.tabsPanel}" ui:field="tabsPanel">
            </design:MaterialPanel>
            <design:MaterialPanel layoutPosition="RELATIVE">
                <design:MaterialPanel addStyleNames="{style.colorPanel}" ui:field="colorPanel"></design:MaterialPanel>
                <design:MaterialRow addStyleNames="{style.tabsContent}" ui:field="tabsContent"></design:MaterialRow>
            </design:MaterialPanel>
            <design:MaterialPanel padding="20" ui:field="recommendationsPanel"></design:MaterialPanel>
        </design:MaterialPanel>
    </views:TemplateView>
</ui:UiBinder>
