<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:m="urn:import:gwt.material.design.client.ui"
             xmlns:maps="urn:import:com.geocento.webapps.eobroker.common.client.widgets.maps"
             xmlns:widgets="urn:import:com.geocento.webapps.eobroker.customer.client.widgets"
             xmlns:cwidgets="urn:import:com.geocento.webapps.eobroker.common.client.widgets">

        <ui:style field="style" type="com.geocento.webapps.eobroker.customer.client.views.TemplateView.Style">

            @external nav-wrapper;

            .panel {
                background: rgb(238, 238, 238);
            }

            .panel header, .panel main, .panel footer {
            }

            .panel header {
            }

            .navBar {
                z-index: 1000;
            }

            .navBar > .nav-wrapper {
            }

            .logoImage {
                display: block;
                cursor: pointer;
            }

            .navOpened main, .navOpened footer {
                padding-left: 300px;
            }

            .navbarElements {
                display: flex;
            }

            .mainPanel {
                min-height: 80%;
            }

            .textSearch {
                flex: 1 1 auto;
                line-height: 54px !important;
                margin: 5px auto !important;
                max-width: 900px;
                background: #809dab !important;
                border-radius: 3px;
            }

            .textSearch i {
                height: 54px !important;
                line-height: 54px !important;
            }

            .textSearch > input {
                display: inline-block !important;
                color: white;
            }

            .textSearch > input:focus {
                background: #809dab !important;
                color: white !important;
            }

            .categories {
                padding-left: 20px;
            }

            .title {
                border-left: 1px solid white;
            }

            .userIcon {
                display: inline-block;
                vertical-align: middle;
            }

            .loading {
                margin: 50px;
            }

        </ui:style>
        <ui:with field="res" type="com.geocento.webapps.eobroker.customer.client.styles.StyleResources"/>
        <ui:with field="resCommon" type="com.geocento.webapps.eobroker.common.client.styles.StyleResources"/>
        <g:HTMLPanel addStyleNames="{style.panel}" ui:field="panel">
            <header>
                <m:MaterialPanel ui:field="header">
                    <!-- NavBar -->
                    <m:MaterialNavBar addStyleNames="{style.navBar}" activates="sideNav" layoutPosition="FIXED" backgroundColor="BLUE_GREY" ui:field="navBar">
                        <m:MaterialNavSection>
                            <m:MaterialImage height="54px" marginLeft="5" marginTop="5" resource="{resCommon.logoEOBroker}" addStyleNames="{style.logoImage}" ui:field="logo"></m:MaterialImage>
                            <m:MaterialLabel text="" display="INLINE" paddingLeft="20" marginLeft="20" paddingRight="20" fontSize="1.2em" addStyleNames="{style.title}" ui:field="title"></m:MaterialLabel>
                            <m:MaterialLink visible="false" text="All categories" activates="categories" textColor="WHITE" iconType="ARROW_DROP_DOWN" iconPosition="RIGHT" addStyleNames="{style.categories}" ui:field="categories"></m:MaterialLink>
                        </m:MaterialNavSection>
                        <m:MaterialNavSection float="RIGHT">
                            <m:MaterialTooltip text="View your requests" position="BOTTOM">
                                <m:MaterialLink iconType="SHOPPING_CART" iconPosition="NONE" layoutPosition="RELATIVE" ui:field="orders">
                                    <m:MaterialBadge text="" backgroundColor="BLUE" textColor="WHITE" circle="true" ui:field="ordersBadge"/>
                                </m:MaterialLink>
                            </m:MaterialTooltip>
                            <m:MaterialTooltip text="Notifications" position="BOTTOM">
                                <m:MaterialLink iconType="NOTIFICATIONS" iconPosition="NONE" layoutPosition="RELATIVE" ui:field="notifications" activates="notifications">
                                    <m:MaterialBadge text="2" backgroundColor="PINK" textColor="WHITE" circle="true" ui:field="notificationsBadge"/>
                                </m:MaterialLink>
                            </m:MaterialTooltip>
                            <m:MaterialTooltip text="Sign-in" position="BOTTOM">
                                <m:MaterialLink iconType="FACE" iconPosition="NONE" ui:field="signIn"/>
                            </m:MaterialTooltip>
                            <m:MaterialTooltip text="Sign-out" position="BOTTOM">
                                <m:MaterialLink ui:field="signOut">
                                    <cwidgets:UserWidget size="40" display="INLINE_BLOCK" addStyleNames="{style.userIcon}" ui:field="userWidget"/>
                                </m:MaterialLink>
                            </m:MaterialTooltip>
                        </m:MaterialNavSection>
                        <g:HTMLPanel addStyleNames="{style.navbarElements}" ui:field="navbarElements">
                            <widgets:MaterialSuggestion layoutPosition="RELATIVE" iconColor="WHITE" backgroundColor="BLUE_GREY" addStyleNames="{style.textSearch}" placeholder="What are you looking for?" active="true" flex="AUTO" ui:field="textSearch"/>
                        </g:HTMLPanel>
                    </m:MaterialNavBar>
                    <m:MaterialDropDown activator="categories" constrainWidth="true" ui:field="categoriesDropdown">
                        <m:MaterialLink waves="DEFAULT" textColor="BLACK" text="All categories" ui:field="allCategories"/>
                    </m:MaterialDropDown>
                </m:MaterialPanel>
                <m:MaterialDropDown constrainWidth="false" activator="notifications" belowOrigin="true" ui:field="notificationsPanel"></m:MaterialDropDown>
            </header>
            <m:MaterialContainer ui:field="mainPanel" paddingTop="64" addStyleNames="{style.mainPanel}">
                <cwidgets:LoadingWidget visible="false" addStyleNames="{style.loading}" ui:field="loading"></cwidgets:LoadingWidget>
                <m:MaterialPanel ui:field="content"></m:MaterialPanel>
            </m:MaterialContainer>
            <m:MaterialFooter backgroundColor="BLUE_GREY" ui:field="footer">
                <m:MaterialRow>
                    <m:MaterialColumn grid="s12 m6 l6">
                        <m:MaterialTitle textColor="WHITE" title="Join The Discussion" description="Chat with us to find more about the EO Broker. Participate in our dedicated EO forums. Contact us for more information."/>
                        <m:MaterialButton ui:field="chat" text="CHAT" backgroundColor="BLUE_LIGHTEN_2" waves="LIGHT"/>
                    </m:MaterialColumn>
                    <m:MaterialColumn grid="s12 m6 l6">
                        <m:MaterialTitle textColor="WHITE" title="The EO Broker group" description="Our mission: raise awareness and facilitate access to EO data for the Oil and Gas industry."/>
                        <m:MaterialAnchorButton ui:field="aboutus" text="ABOUT US" backgroundColor="BLUE_LIGHTEN_2" waves="LIGHT" href="http://eobroker.com/"/>
                    </m:MaterialColumn>
                </m:MaterialRow>
                <m:MaterialFooterCopyright>
                    <m:MaterialLabel text="Â© 2016 Copyright Geocento Ltd and partners" />
                </m:MaterialFooterCopyright>
            </m:MaterialFooter>
        </g:HTMLPanel>
    </ui:UiBinder>
