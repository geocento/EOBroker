<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:design="urn:import:gwt.material.design.client.ui"
             xmlns:views="urn:import:com.geocento.webapps.eobroker.customer.client.views"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:maps="urn:import:com.geocento.webapps.eobroker.common.client.widgets.maps"
        >
    <ui:style field="style" type="com.geocento.webapps.eobroker.customer.client.views.ProductFormViewImpl.Style">
        .formPanel {
            width: 960px;
            margin: 0px auto;
        }

        .buttonsPanel {
            padding: 20px 0px;
        }

        .container {
            margin: 20px 0px 20px 30px;
        }

        .editor {
            margin-bottom: 20px;
        }

        .mapPanel {
            position: relative;
        }

        .section {
            padding: 10px 0px 10px 10px;
            font-size: 1rem;
            color: #9e9e9e;
        }

    </ui:style>
    <views:TemplateView ui:field="template">
        <g:HTMLPanel addStyleNames="{style.formPanel}">
            <design:MaterialTitle textColor="blue-grey" marginBottom="20" title="Request quotation for the following product" ui:field="title"></design:MaterialTitle>
            <design:MaterialCard backgroundColor="white" axis="HORIZONTAL" shadow="0">
                <design:MaterialCardImage>
                    <design:MaterialImage ui:field="image"></design:MaterialImage>
                </design:MaterialCardImage>
                <design:MaterialCardContent>
                    <design:MaterialLabel fontSize="1.5em" ui:field="name"/>
                    <design:MaterialLabel ui:field="description"></design:MaterialLabel>
                </design:MaterialCardContent>
                <design:MaterialCardAction ui:field="action">
                    <design:MaterialLink iconType="INFO" text="MORE INFORMATION" ui:field="information"></design:MaterialLink>
                </design:MaterialCardAction>
            </design:MaterialCard>
            <g:HTMLPanel>
                <design:MaterialLabel text="Please fill in the form" textColor="blue-grey" marginTop="20" marginBottom="20" fontSize="1.4em"/>
                <design:MaterialRow>
                    <design:MaterialColumn grid="s12 m12 l6">
                        <g:HTMLPanel addStyleNames="{style.container}" ui:field="formContainer"></g:HTMLPanel>
                    </design:MaterialColumn>
                    <design:MaterialColumn grid="s12 m12 l6">
                        <design:MaterialLabel text="Draw or upload AoI" addStyleNames="{style.section}"></design:MaterialLabel>
                        <g:HTMLPanel addStyleNames="{style.mapPanel}" ui:field="mapPanel">
                            <maps:ArcGISMap width="100%" height="300px" ui:field="mapContainer">
                            </maps:ArcGISMap>
                            <!-- FAB -->
                            <design:MaterialFAB layoutPosition="ABSOLUTE" bottom="60">
                                <design:MaterialTooltip text="Create" position="LEFT">
                                    <design:MaterialButton type="FLOATING" backgroundColor="red" iconType="ADD" size="LARGE"/>
                                </design:MaterialTooltip>
                                <design:MaterialFABList>
                                    <design:MaterialTooltip text="Theme" position="LEFT">
                                        <design:MaterialAnchorButton type="FLOATING" waves="LIGHT" backgroundColor="blue" iconType="CREATE" ui:field="drawPolygon"/>
                                    </design:MaterialTooltip>
                                    <design:MaterialTooltip text="Mail " position="LEFT">
                                        <design:MaterialAnchorButton type="FLOATING" waves="LIGHT" backgroundColor="amber"  iconType="LAYERS_CLEAR" ui:field="clearAoIs"/>
                                    </design:MaterialTooltip>
                                </design:MaterialFABList>
                            </design:MaterialFAB>
                        </g:HTMLPanel>
                    </design:MaterialColumn>
                </design:MaterialRow>
            </g:HTMLPanel>
            <g:HTMLPanel>
                <design:MaterialLabel text="Select your suppliers" textColor="blue-grey" marginTop="20" marginBottom="20" fontSize="1.4em"/>
                <g:HTMLPanel addStyleNames="{style.container}" ui:field="productServices">
                </g:HTMLPanel>
            </g:HTMLPanel>
            <g:HTMLPanel addStyleNames="{style.buttonsPanel}">
                <design:MaterialButton text="SUBMIT" textColor="white" backgroundColor="blue" ui:field="submit"></design:MaterialButton>
            </g:HTMLPanel>
        </g:HTMLPanel>
    </views:TemplateView>
</ui:UiBinder>
