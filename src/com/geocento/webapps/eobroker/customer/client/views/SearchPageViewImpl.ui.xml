<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:design="urn:import:gwt.material.design.client.ui"
             xmlns:views="urn:import:com.geocento.webapps.eobroker.customer.client.views"
             xmlns:maps="urn:import:com.geocento.webapps.eobroker.common.client.widgets.maps"
        >
    <ui:style field="style" type="com.geocento.webapps.eobroker.customer.client.views.SearchPageViewImpl.Style">

        .currentSearch {
            margin: 20px 10px;
            font-size: 1.2em;
        }

        .currentSearch:hover {
            text-decoration: underline;
        }

        .textSearch > input {
            display: inline !important;
        }

        .categories {
            padding: 10px 10px 10px 30px;
            line-height: normal !important;
        }

        .navBrand {
            color: grey;
            padding-left: 20px;
            font-size: 1.4em;
        }

        .productTitle, .productServicesTitle {
            margin: 7px 0;
            padding-left: 10px;
            line-height: 50px;
            font-size: 28px;
            color: white;
        }

        .productTitle {
            background-color: #4db6ac;
        }

        .productServicesTitle {
            background-color: #4db6ac;
        }

        .alternativesTitle {

        }

        .filters {
            line-height: normal !important;
        }

        .logoImage {
            display: block;
            cursor: pointer;
        }

        .navOpened main, .navOpened footer {
            padding-left: 360px;
        }

        .mapPanel {
            position: relative;
            padding: 10px;
            background: white;
        }

        .map {
        }

    </ui:style>
    <ui:with field="res" type="com.geocento.webapps.eobroker.customer.client.styles.StyleResources"/>
    <views:TemplateView ui:field="template" titleText="Search">
        <views:header>
            <!-- SideNav -->
            <design:MaterialSideNav type="FIXED" design:id="sideNav" alwaysShowActivator="false" top="64" width="350" allowBodyScroll="true" shadow="1" ui:field="filtersPanel">
                <design:MaterialCollapsible backgroundColor="white">
                    <design:MaterialCollapsibleItem ui:field="categoriesPanel">
                        <design:MaterialCollapsibleHeader backgroundColor="white">
                            <design:MaterialLink text="Categories" textColor="blue" iconType="LAYERS"/>
                        </design:MaterialCollapsibleHeader>
                        <design:MaterialCollapsibleBody>
                            <g:HTMLPanel addStyleNames="{style.categories}" ui:field="categories">
                            </g:HTMLPanel>
                        </design:MaterialCollapsibleBody>
                    </design:MaterialCollapsibleItem>
                    <design:MaterialCollapsibleItem ui:field="options">
                        <design:MaterialCollapsibleHeader backgroundColor="white">
                            <design:MaterialLink text="Filter by" textColor="blue" iconType="FILTER"/>
                        </design:MaterialCollapsibleHeader>
                        <design:MaterialCollapsibleBody>
                            <g:HTMLPanel addStyleNames="{style.categories}" ui:field="settings">
                            </g:HTMLPanel>
                        </design:MaterialCollapsibleBody>
                    </design:MaterialCollapsibleItem>
                </design:MaterialCollapsible>
                <g:HTMLPanel addStyleNames="{style.mapPanel}" ui:field="mapPanel">
                    <maps:ArcGISMap width="100%" height="250px" addStyleNames="{style.map}" ui:field="mapContainer">
                    </maps:ArcGISMap>
                </g:HTMLPanel>
            </design:MaterialSideNav>
        </views:header>
        <g:HTMLPanel>
            <design:MaterialTooltip text="Click to change your search">
                <design:MaterialLink ui:field="currentSearch" addStyleNames="{style.currentSearch}, truncate" textColor="black" text="some search keywords" iconType="SEARCH"/>
            </design:MaterialTooltip>
        </g:HTMLPanel>
        <g:HTMLPanel ui:field="container"></g:HTMLPanel>
    </views:TemplateView>
</ui:UiBinder>
