<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:design="urn:import:gwt.material.design.client.ui"
             xmlns:views="urn:import:com.geocento.webapps.eobroker.customer.client.views"
             xmlns:maps="urn:import:com.geocento.webapps.eobroker.common.client.widgets.maps"
             xmlns:widgets="urn:import:com.geocento.webapps.eobroker.common.client.widgets"
             xmlns:cmaps="urn:import:com.geocento.webapps.eobroker.customer.client.widgets.maps"
        >
    <ui:style field="style" type="com.geocento.webapps.eobroker.customer.client.views.SearchPageViewImpl.Style">

        .currentSearch {
            margin: 20px 10px;
            font-size: 1.2em;
        }

        .currentSearch:hover {
            text-decoration: underline;
        }

        .textSearch > input {
            display: inline !important;
        }

        .filters {
            padding: 30px;
            line-height: normal !important;
        }

        .navBrand {
            color: grey;
            padding-left: 20px;
            font-size: 1.4em;
        }

        .productTitle, .productServicesTitle {
            margin: 0;
            padding: 0px 10px;
            line-height: 2em;
            font-size: 1.2em;
            color: white;
        }

        .productTitle {
        }

        .productServicesTitle {
        }

        .alternativesTitle {
        }

        .logoImage {
            display: block;
            cursor: pointer;
        }

        .navOpened main, .navOpened footer {
            padding-left: 360px;
        }

        .mapPanel {
        }
        .mapPanel a {
            padding: 0px !important;
        }
        .mapPanel i {
            font-size: 1.3rem !important;
        }

        .map {
        }

        .container {
            max-width: 960px;
        }

        .option {
            padding-left: 30px;
        }

        .optionTitle {
            margin: 20px 0px;
        }

        .sidenavPanel {
            height: 100%;
        }

        .sideNav {
            height: auto !important;
            bottom: 0px !important;
            background: rgb(238, 238, 238) !important;
        }

        .subTitle {
            margin: 7px 0;
            padding-left: 20px;
            line-height: 40px;
            font-size: 1.2em;
        }

        .subtext {
            margin: 7px 0;
            padding-left: 30px;
            line-height: 30px;
            font-size: 1em;
        }

        .resultsPanel {
            padding: 10px 20px;
            max-width: 960px;
        }

        a.category {
            height: inherit;
            font-size: 1em;
            line-height: 2.6em;
            padding: 0 !important;
            margin: 0;
        }

        .category.selected {
/*
            color: blue !important;
*/
        }

        .filterBy {
            margin-top: 20px;
            padding-top: 20px;
            padding-left: 10px;
            border-top: 1px #ccc solid;
        }

        .loadingPanel {
            text-align: center;
        }

    </ui:style>
    <ui:with field="res" type="com.geocento.webapps.eobroker.customer.client.styles.StyleResources"/>
    <ui:with field="resCommon" type="com.geocento.webapps.eobroker.common.client.styles.StyleResources"/>
    <views:TemplateView titleText="Search" footer="false" ui:field="template">
        <views:header>
            <!-- SideNav -->
            <widgets:MaterialSideNav type="FIXED" design:id="sideNav" alwaysShowActivator="false" top="64" width="350" allowBodyScroll="true" shadow="0" addStyleNames="{style.sideNav}, {resCommon.style.slimScrollbar}" ui:field="filtersPanel">
                <g:HTMLPanel addStyleNames="{style.sidenavPanel}">
                    <g:HTMLPanel addStyleNames="{style.filters}">
                        <g:HTMLPanel ui:field="categories">
                            <design:MaterialLink addStyleNames="{style.category}" text="Products" iconSize="TINY" iconType="MAP" ui:field="productsCategory"></design:MaterialLink>
                            <design:MaterialLink addStyleNames="{style.category}" text="On-demand services" iconType="MAP" ui:field="productServicesCategory"></design:MaterialLink>
                            <design:MaterialLink addStyleNames="{style.category}" text="Off-the-shelf data" iconType="MAP" ui:field="productDatasetsCategory"></design:MaterialLink>
                            <design:MaterialLink addStyleNames="{style.category}" text="Software solutions" iconType="MAP" ui:field="softwareCategory"></design:MaterialLink>
                            <design:MaterialLink addStyleNames="{style.category}" text="Projects" iconType="MAP" ui:field="projectsCategory"></design:MaterialLink>
                            <design:MaterialLink addStyleNames="{style.category}" text="Companies" iconType="MAP" ui:field="companiesCategory"></design:MaterialLink>
                        </g:HTMLPanel>
                        <design:MaterialLink visible="false" text="Filter by" fontSize="1em" textColor="blue-grey" iconType="SEARCH"/>
                        <g:HTMLPanel addStyleNames="{style.filterBy}">
                            <g:HTMLPanel ui:field="settings">
                            </g:HTMLPanel>
                            <design:MaterialCheckBox addStyleNames="{style.optionTitle}" ui:field="filterByAoI">Filter by area of interest</design:MaterialCheckBox>
                            <cmaps:MapContainer addStyleNames="{style.mapPanel}" height="200px" ui:field="mapContainer"></cmaps:MapContainer>
                            <g:HTMLPanel ui:field="timeFrame">
                                <design:MaterialCheckBox addStyleNames="{style.optionTitle}" ui:field="filterByTimeFrame">Filter by period of interest</design:MaterialCheckBox>
                                <design:MaterialDatePicker placeholder="Start date" ui:field="start"></design:MaterialDatePicker>
                                <design:MaterialDatePicker placeholder="Stop date" ui:field="stop"></design:MaterialDatePicker>
                            </g:HTMLPanel>
                        </g:HTMLPanel>
                    </g:HTMLPanel>
                </g:HTMLPanel>
            </widgets:MaterialSideNav>
        </views:header>
        <g:HTMLPanel addStyleNames="{style.resultsPanel}">
            <design:MaterialLink addStyleNames="{style.currentSearch}, truncate" textColor="blue-grey" ui:field="resultsTitle"/>
            <g:HTMLPanel addStyleNames="{style.container}" ui:field="container"></g:HTMLPanel>
            <g:HTMLPanel addStyleNames="{style.loadingPanel}">
                <widgets:LoadingWidget ui:field="loading"></widgets:LoadingWidget>
            </g:HTMLPanel>
            <g:HTMLPanel visible="false" ui:field="requirementsPanel">
                <p>Can't find what you are looking for? Please <g:Anchor ui:field="sendRequirements">send us</g:Anchor> your requirements!</p>
            </g:HTMLPanel>
        </g:HTMLPanel>
    </views:TemplateView>
</ui:UiBinder>
