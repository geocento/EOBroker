<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:design="urn:import:gwt.material.design.client.ui"
             xmlns:views="urn:import:com.geocento.webapps.eobroker.customer.client.views"
             xmlns:maps="urn:import:com.geocento.webapps.eobroker.common.client.widgets.maps"
             xmlns:widgets="urn:import:com.geocento.webapps.eobroker.common.client.widgets"
        >
    <ui:style field="style" type="com.geocento.webapps.eobroker.customer.client.views.SearchPageViewImpl.Style">

        .currentSearch {
            margin: 20px 10px;
            font-size: 1.2em;
        }

        .currentSearch:hover {
            text-decoration: underline;
        }

        .textSearch > input {
            display: inline !important;
        }

        .filters {
            padding: 0px 10px 0px 30px;
            line-height: normal !important;
        }

        .navBrand {
            color: grey;
            padding-left: 20px;
            font-size: 1.4em;
        }

        .productTitle, .productServicesTitle {
            margin: 7px 0;
            padding-left: 10px;
            line-height: 50px;
            font-size: 1.6em;
            color: white;
        }

        .productTitle {
            background-color: #4db6ac;
        }

        .productServicesTitle {
            background-color: #4db6ac;
        }

        .alternativesTitle {

        }

        .filters {
            line-height: normal !important;
        }

        .logoImage {
            display: block;
            cursor: pointer;
        }

        .navOpened main, .navOpened footer {
            padding-left: 360px;
        }

        .mapPanel {
            background: white;
        }

        .map {
        }

        .container {
            max-width: 960px;
        }

        .option {
            padding-left: 30px;
        }

        .optionTitle {
            margin: 20px 0px;
        }

        .sidenavPanel {
            height: 100%;
            background: white;
        }

        .sideNav {
            height: auto !important;
            bottom: 0px !important;
        }

        .subTitle {
            margin: 7px 0;
            padding-left: 20px;
            line-height: 40px;
            font-size: 1.2em;
        }

        .subtext {
            margin: 7px 0;
            padding-left: 30px;
            line-height: 30px;
            font-size: 1em;
        }

    </ui:style>
    <ui:with field="res" type="com.geocento.webapps.eobroker.customer.client.styles.StyleResources"/>
    <views:TemplateView ui:field="template" titleText="Search">
        <views:header>
            <!-- SideNav -->
            <widgets:MaterialSideNav type="FIXED" design:id="sideNav" alwaysShowActivator="false" top="64" width="350" allowBodyScroll="true" shadow="1" backgroundColor="white" addStyleNames="{style.sideNav}" ui:field="filtersPanel">
                <g:HTMLPanel addStyleNames="{style.sidenavPanel}">
                    <design:MaterialLink visible="false" text="Filter by" fontSize="1em" textColor="blue-grey" iconType="SEARCH"/>
                    <g:HTMLPanel addStyleNames="{style.filters}">
                        <g:HTMLPanel ui:field="categories">
                            <design:MaterialLabel addStyleNames="{style.optionTitle}">Categories</design:MaterialLabel>
                        </g:HTMLPanel>
                        <g:HTMLPanel ui:field="settings">
                        </g:HTMLPanel>
                        <design:MaterialLabel addStyleNames="{style.optionTitle}">Area of interest</design:MaterialLabel>
                        <maps:MapContainer addStyleNames="{style.mapPanel}" height="250px" ui:field="mapContainer"></maps:MapContainer>
                        <design:MaterialCheckBox text="limit to AoI" addStyleNames="{style.optionTitle}" ui:field="filterByAoI"></design:MaterialCheckBox>
                    </g:HTMLPanel>
                </g:HTMLPanel>
            </widgets:MaterialSideNav>
        </views:header>
        <g:HTMLPanel>
            <design:MaterialTooltip text="Click to change your search">
                <design:MaterialLink addStyleNames="{style.currentSearch}, truncate" textColor="blue-grey" text="some search keywords" ui:field="currentSearch"/>
            </design:MaterialTooltip>
        </g:HTMLPanel>
        <g:HTMLPanel addStyleNames="{style.container}" ui:field="container"></g:HTMLPanel>
        <g:HTMLPanel>
            <p>Can't find what you are looking for? Please <g:Anchor ui:field="sendRequirements">send us</g:Anchor> your requirements!</p>
        </g:HTMLPanel>
    </views:TemplateView>
</ui:UiBinder>
