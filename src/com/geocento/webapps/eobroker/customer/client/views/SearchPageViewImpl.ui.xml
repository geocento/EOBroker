<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:design="urn:import:gwt.material.design.client.ui"
        >
    <ui:style field="style" type="com.geocento.webapps.eobroker.customer.client.views.SearchPageViewImpl.Style">
        .panel header {

        }

        .panel main, .panel footer {
            padding-left: 280px;
        }

        .mainPanel {
            position: fixed;
            top: 64px;
            bottom: 0px;
            width: 100%;
            overflow-y: auto;
        }

        .label {
            margin: 24px;
        }

        .currentSearch {
            margin: 20px 10px;
            font-size: 1.5em;
        }
        .currentSearch:hover {
            text-decoration: underline;
        }

        .textSearch > input {
            display: inline !important;
        }

        .categories {
            padding-left: 30px;
            line-height: normal !important;
        }

        .navBrand {
            color: grey;
            padding-left: 20px;
            font-size: 1.4em;
        }

        .productTitle, .productServicesTitle {
            margin: 7px 0;
            padding-left: 10px;
            line-height: 50px;
            font-size: 28px;
            color: white;
        }

        .productTitle {
            background-color: #4db6ac;
        }

        .productServicesTitle {
            background-color: #4db6ac;
        }

        .alternativesTitle {

        }

        .filters {
            line-height: normal !important;
        }

        .logoImage {
            display: block;
            cursor: pointer;
        }

    </ui:style>
    <ui:with field="res" type="com.geocento.webapps.eobroker.customer.client.styles.StyleResources"/>
    <g:HTMLPanel addStyleNames="{style.panel}">
        <header>
            <!-- NavBar -->
            <design:MaterialNavBar activates="sideNav" paddingLeft="20" backgroundColor="blue" ui:field="navBar">
                <design:MaterialNavSection flex="NONE">
                    <design:MaterialImage height="64px" resource="{res.logoEOBroker}" addStyleNames="{style.logoImage}" ui:field="logo"></design:MaterialImage>
                    <design:MaterialLabel text="Search Results" paddingLeft="50" fontSize="1.5em"></design:MaterialLabel>
                </design:MaterialNavSection>
                <design:MaterialNavSection float="RIGHT">
                    <design:MaterialTooltip text="Orders" position="BOTTOM">
                        <design:MaterialLink iconType="SHOPPING_CART" iconPosition="NONE"/>
                    </design:MaterialTooltip>
                    <design:MaterialTooltip text="Notifications" position="BOTTOM">
                        <design:MaterialLink activates="sideNav" iconType="NOTIFICATIONS" iconPosition="NONE"/>
                    </design:MaterialTooltip>
                    <design:MaterialTooltip text="Sign-in" position="BOTTOM">
                        <design:MaterialLink ui:field="signIn" iconType="FACE" iconPosition="NONE"/>
                    </design:MaterialTooltip>
                </design:MaterialNavSection>
            </design:MaterialNavBar>

            <!-- Search Bar -->
            <design:MaterialNavBar ui:field="navBarSearch" backgroundColor="white" visible="false">
                <design:MaterialSearch ui:field="textSearch" addStyleNames="{style.textSearch}" placeholder="Keyword" textColor="black" active="true"/>
            </design:MaterialNavBar>

            <!-- SideNav -->
            <design:MaterialSideNav type="FIXED" design:id="sideNav" alwaysShowActivator="true" top="64" closeOnClick="true" width="280" ui:field="filtersPanel">
                <design:MaterialLabel addStyleNames="{style.navBrand}">Show results for</design:MaterialLabel>
                <design:MaterialCollapsible>
                    <design:MaterialCollapsibleItem ui:field="categoriesPanel">
                        <design:MaterialCollapsibleHeader>
                            <design:MaterialLink text="Categories" textColor="blue" iconType="LAYERS"/>
                        </design:MaterialCollapsibleHeader>
                        <design:MaterialCollapsibleBody>
                            <g:HTMLPanel addStyleNames="{style.categories}" ui:field="categories">
                            </g:HTMLPanel>
                        </design:MaterialCollapsibleBody>
                    </design:MaterialCollapsibleItem>
                    <design:MaterialCollapsibleItem ui:field="options">
                        <design:MaterialCollapsibleHeader>
                            <design:MaterialLink text="Options" textColor="blue" iconType="SETTINGS"/>
                        </design:MaterialCollapsibleHeader>
                        <design:MaterialCollapsibleBody>
                            <g:HTMLPanel addStyleNames="{style.categories}" ui:field="settings">
                            </g:HTMLPanel>
                        </design:MaterialCollapsibleBody>
                    </design:MaterialCollapsibleItem>
                </design:MaterialCollapsible>
            </design:MaterialSideNav>
        </header>

        <g:HTMLPanel addStyleNames="{style.mainPanel}">
            <design:MaterialContainer fontSize="0.8em">
                <g:HTMLPanel>
                    <design:MaterialTooltip text="Click to change your search">
                        <design:MaterialLink ui:field="currentSearch" addStyleNames="{style.currentSearch}, truncate" textColor="black" text="some search keywords" iconType="SEARCH"/>
                    </design:MaterialTooltip>
                </g:HTMLPanel>
                <g:HTMLPanel ui:field="container"></g:HTMLPanel>
            </design:MaterialContainer>
            <design:MaterialFooter backgroundColor="blue">
                <design:MaterialFooterCopyright>
                    <design:MaterialLabel text="Â© 2016 Copyright Geocento Ltd" />
                </design:MaterialFooterCopyright>
            </design:MaterialFooter>
        </g:HTMLPanel>

    </g:HTMLPanel>
</ui:UiBinder>
