<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:design="urn:import:gwt.material.design.client.ui"
        >
    <ui:style field="style" type="com.geocento.webapps.eobroker.customer.client.views.SearchPageViewImpl.Style">
        .panel header, .panel main, .panel footer {
            padding-left: 280px;
        }

        .panel main {
            overflow-x: auto;
            height: 100%;
        }

        .label {
            margin: 24px;
        }

        .currentSearch {
            display: block;
            top: 0px;
            bottodesign: 0px;
            margin-right: 300px;
        }

        .textSearch > input {
            display: inline !important;
        }

        .categories {
            padding-left: 30px;
            line-height: normal !important;
        }

        .navBrand {
            position: relative !important;
        }

        .productTitle, .productServicesTitle {
            margin: 7px 0;
            text-align: center;
            line-height: 50px;
            font-size: 28px;
            color: white;
        }

        .productTitle {
            background-color: tomato;
        }

        .productServicesTitle {
            background-color: tomato;
        }

        .alternativesTitle {

        }

        .filters {
            line-height: normal !important;
        }

    </ui:style>
    <ui:with field="res" type="com.geocento.webapps.eobroker.customer.client.styles.StyleResources"/>
    <g:HTMLPanel addStyleNames="{style.panel}">
        <header>
            <!-- NavBar -->
            <design:MaterialNavBar activates="sideNav" paddingLeft="20" backgroundColor="blue" ui:field="navBar">
                <design:MaterialNavSection float="RIGHT">
                    <design:MaterialTooltip text="Orders" position="BOTTOM">
                        <design:MaterialLink iconType="SHOPPING_CART" iconPosition="NONE"/>
                    </design:MaterialTooltip>
                    <design:MaterialTooltip text="Notifications" position="BOTTOM">
                        <design:MaterialLink activates="sideNav" iconType="NOTIFICATIONS" iconPosition="NONE"/>
                    </design:MaterialTooltip>
                    <design:MaterialTooltip text="Sign-in" position="BOTTOM">
                        <design:MaterialLink ui:field="signIn" iconType="FACE" iconPosition="NONE"/>
                    </design:MaterialTooltip>
                </design:MaterialNavSection>
                <design:MaterialLink ui:field="currentSearch" addStyleNames="{style.currentSearch}, truncate" textColor="white" text="some search keywords" iconType="SEARCH"/>
            </design:MaterialNavBar>

            <!-- Search Bar -->
            <design:MaterialNavBar ui:field="navBarSearch" backgroundColor="white" visible="false">
                <design:MaterialSearch ui:field="textSearch" addStyleNames="{style.textSearch}" placeholder="Keyword" textColor="black" active="true"/>
            </design:MaterialNavBar>

            <!-- SideNav -->
            <design:MaterialSideNav type="FIXED" design:id="sideNav" closeOnClick="true" width="280" ui:field="filtersPanel">
                <design:MaterialNavBrand addStyleNames="{style.navBrand}" href="#Test">EO Broker</design:MaterialNavBrand>
                <design:MaterialCollapsible>
                    <design:MaterialCollapsibleItem ui:field="categoriesPanel">
                        <design:MaterialCollapsibleHeader>
                            <design:MaterialLink text="Categories" textColor="blue" iconType="LAYERS"/>
                        </design:MaterialCollapsibleHeader>
                        <design:MaterialCollapsibleBody>
                            <g:HTMLPanel addStyleNames="{style.categories}" ui:field="categories">
                            </g:HTMLPanel>
                        </design:MaterialCollapsibleBody>
                    </design:MaterialCollapsibleItem>
                    <design:MaterialCollapsibleItem ui:field="options">
                        <design:MaterialCollapsibleHeader>
                            <design:MaterialLink text="Options" textColor="blue" iconType="SETTINGS"/>
                        </design:MaterialCollapsibleHeader>
                        <design:MaterialCollapsibleBody>
                            <g:HTMLPanel addStyleNames="{style.categories}" ui:field="settings">
                            </g:HTMLPanel>
                        </design:MaterialCollapsibleBody>
                    </design:MaterialCollapsibleItem>
                </design:MaterialCollapsible>
            </design:MaterialSideNav>
        </header>

        <design:MaterialContainer fontSize="0.8em" ui:field="container">
            <design:MaterialRow>
                <design:MaterialColumn grid="l3 m4 s12">
                    <design:MaterialCard backgroundColor="indigo">
                        <design:MaterialCardImage>
                            <design:MaterialImage url="https://13thflooroffice.files.wordpress.com/2013/06/kodaline_in-a-perfect-world-packshot-1000.jpg"></design:MaterialImage>
                        </design:MaterialCardImage>
                        <design:MaterialCardContent textColor="white">
                            <design:MaterialImage layoutPosition="ABSOLUTE" marginTop="-32" resource="{res.logoEOBroker}"></design:MaterialImage>
                            <design:MaterialLabel fontSize="1.4em" text="Text Service Card"></design:MaterialLabel>
                            <design:MaterialLabel fontSize="1.2em" opacity="0.6" text="Some extra details as needed"></design:MaterialLabel>
                        </design:MaterialCardContent>
                        <design:MaterialCardAction>
                            <design:MaterialLink text="FEASIBILITY"></design:MaterialLink>
                            <design:MaterialLink text="REQUEST"></design:MaterialLink>
                            <design:MaterialLink iconType="INFO"></design:MaterialLink>
                        </design:MaterialCardAction>
                    </design:MaterialCard>
                </design:MaterialColumn>
            </design:MaterialRow>

            <design:MaterialColumn grid="l6 s12 m6" padding="4">
                <design:MaterialCard marginBottom="0" marginTop="0" backgroundColor="grey darken-1">
                    <design:MaterialCardImage waves="DEFAULT">
                        <design:MaterialImage url="https://13thflooroffice.files.wordpress.com/2013/06/kodaline_in-a-perfect-world-packshot-1000.jpg"/>
                    </design:MaterialCardImage>
                    <design:MaterialCardContent textColor="black">
                        <design:MaterialRow marginBottom="0">
                            <design:MaterialLabel fontSize="1.2em" text="In a Perfect World" textColor="white" grid="l9 s9 m9" truncate="true"/>
                            <design:MaterialIcon iconType="STAR" textAlign="RIGHT" iconColor="white" grid="l3 s3 m3" />
                        </design:MaterialRow>
                        <design:MaterialLabel text="Kodaline" textColor="white"/>
                        <design:MaterialLabel text="Recently Added" fontSize="0.8em" textColor="white"/>
                    </design:MaterialCardContent>
                </design:MaterialCard>
            </design:MaterialColumn>

        </design:MaterialContainer>

        <!-- FAB -->
        <design:MaterialFAB>
            <design:MaterialTooltip text="Create" position="LEFT">
                <design:MaterialButton type="FLOATING" backgroundColor="red" iconType="ADD" size="LARGE"/>
            </design:MaterialTooltip>
            <design:MaterialFABList>
                <design:MaterialTooltip text="Theme" position="LEFT">
                    <design:MaterialAnchorButton type="FLOATING" waves="LIGHT" backgroundColor="blue" iconType="PALETTE"/>
                </design:MaterialTooltip>
                <design:MaterialTooltip text="Mail " position="LEFT">
                    <design:MaterialAnchorButton type="FLOATING" waves="LIGHT" backgroundColor="amber"  iconType="MAIL"/>
                </design:MaterialTooltip>
            </design:MaterialFABList>
        </design:MaterialFAB>

        <!--
                    &lt;!&ndash; Footer &ndash;&gt;
                    <design:MaterialFooter backgroundColor="blue" type="FIXED">
                        <design:MaterialFooterCopyright>
                            <design:MaterialLabel text="Â© 2015 Copyright GWT Material" />
                        </design:MaterialFooterCopyright>
                    </design:MaterialFooter>
        -->
    </g:HTMLPanel>
</ui:UiBinder>
