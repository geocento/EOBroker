<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:m="urn:import:gwt.material.design.client.ui"
             xmlns:maps="urn:import:com.geocento.webapps.eobroker.common.client.widgets.maps"
             xmlns:widgets="urn:import:com.geocento.webapps.eobroker.customer.client.widgets"
             xmlns:h="urn:import:com.google.gwt.user.client.ui"
             xmlns:views="urn:import:com.geocento.webapps.eobroker.customer.client.views"
             xmlns:cwidgets="urn:import:com.geocento.webapps.eobroker.common.client.widgets">

    <ui:with field="res" type="com.geocento.webapps.eobroker.customer.client.styles.StyleResources"/>
    <ui:style>

        @external nav-wrapper;

        .panel {
            max-width: 960px;
            margin: auto;
            padding: 0px 20px;
        }

        .section {
            padding: 10px 0px 10px 10px;
            font-size: 1rem;
            color: #9e9e9e;
        }

        .suppliersPanel {
            padding-left: 30px;
        }

        .buttonPanel {
            padding: 50px 10px;
        }

        .mapPanel {
            position: relative;
        }

        .title {
            margin-top: 50px;
            margin-bottom: 20px;
            font-size: 1.5em;
        }

        .subsection {
            margin-bottom: 20px;
            font-size: 1.2em;
        }

    </ui:style>
    <views:TemplateView titleText="Request imagery quotation" ui:field="template">
        <g:HTMLPanel addStyleNames="{style.panel}">
            <m:MaterialTitle textColor="blue-grey" title="Request quotation for imagery" description="Please fill in the form below"></m:MaterialTitle>
<!--
            <m:MaterialLabel addStyleNames="{style.title}">Request quotation for imagery</m:MaterialLabel>
            <m:MaterialLabel textColor="blue-grey" addStyleNames="{style.subsection}">Please fill in the form below</m:MaterialLabel>
-->
            <m:MaterialRow>
                <m:MaterialColumn grid="s12 m12 l6">
                    <m:MaterialTextBox placeholder="Specify type of imagery you request" ui:field="imagetype"></m:MaterialTextBox>
                    <m:MaterialListBox placeholder="Specify the application" ui:field="application"></m:MaterialListBox>
                    <m:MaterialRow>
                        <m:MaterialColumn grid="s12 m6 l6">
                            <m:MaterialDatePicker placeholder="Start time" ui:field="start"></m:MaterialDatePicker>
                        </m:MaterialColumn>
                        <m:MaterialColumn grid="s12 m6 l6">
                            <m:MaterialDatePicker placeholder="Stop time" ui:field="stop"></m:MaterialDatePicker>
                        </m:MaterialColumn>
                    </m:MaterialRow>
                    <m:MaterialTextArea placeholder="Additional information" ui:field="information"></m:MaterialTextArea>
                    <m:MaterialLabel text="Select suppliers" addStyleNames="{style.section}"></m:MaterialLabel>
                    <g:HTMLPanel addStyleNames="{style.suppliersPanel}" ui:field="suppliers">
                        <m:MaterialCheckBox text="Geocento"></m:MaterialCheckBox>
                        <m:MaterialCheckBox text="KSAT"></m:MaterialCheckBox>
                    </g:HTMLPanel>
                </m:MaterialColumn>
                <m:MaterialColumn grid="s12 m12 l6">
                    <m:MaterialLabel text="Draw or upload AoI" addStyleNames="{style.section}"></m:MaterialLabel>
                    <g:HTMLPanel addStyleNames="{style.mapPanel}" ui:field="mapPanel">
                        <maps:ArcGISMap width="100%" height="300px" ui:field="mapContainer">
                        </maps:ArcGISMap>
                        <!-- FAB -->
                        <m:MaterialFAB layoutPosition="ABSOLUTE" bottom="60">
                            <m:MaterialTooltip text="Create" position="LEFT">
                                <m:MaterialButton type="FLOATING" backgroundColor="red" iconType="ADD" size="LARGE"/>
                            </m:MaterialTooltip>
                            <m:MaterialFABList>
                                <m:MaterialTooltip text="Theme" position="LEFT">
                                    <m:MaterialAnchorButton type="FLOATING" waves="LIGHT" backgroundColor="blue" iconType="CREATE" ui:field="drawPolygon"/>
                                </m:MaterialTooltip>
                                <m:MaterialTooltip text="Mail " position="LEFT">
                                    <m:MaterialAnchorButton type="FLOATING" waves="LIGHT" backgroundColor="amber"  iconType="LAYERS_CLEAR" ui:field="clearAoIs"/>
                                </m:MaterialTooltip>
                            </m:MaterialFABList>
                        </m:MaterialFAB>
                    </g:HTMLPanel>
                </m:MaterialColumn>
                <m:MaterialColumn grid="s12 m12 l12">
                    <h:HTMLPanel addStyleNames="{style.buttonPanel}">
                        <cwidgets:ProgressButton text="SUBMIT" ui:field="submit">
                        </cwidgets:ProgressButton>
                    </h:HTMLPanel>
                </m:MaterialColumn>
            </m:MaterialRow>
        </g:HTMLPanel>
    </views:TemplateView>
</ui:UiBinder>
