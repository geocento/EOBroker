<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:design="urn:import:gwt.material.design.client.ui">
    <design:MaterialCard backgroundColor="white" axis="VERTICAL">
        <design:MaterialCardContent textColor="white" backgroundColor="grey">
            <design:MaterialLabel fontSize="1.5em" ui:field="title"/>
            <design:MaterialLabel ui:field="description"></design:MaterialLabel>
        </design:MaterialCardContent>
        <design:MaterialCardAction ui:field="action">
            <design:MaterialButton text="Request Imagery" backgroundColor="blue-grey" textColor="white" ui:field="request"></design:MaterialButton>
        </design:MaterialCardAction>
    </design:MaterialCard>
</ui:UiBinder>