<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:widgets="urn:import:com.geocento.webapps.eobroker.supplier.client.widgets"
             xmlns:design="urn:import:gwt.material.design.client.ui">
    <ui:style>

        .pitch {
            overflow: hidden;
            line-height: 1.2em;
            height: 2.4em;
            font-size: 1em;
            /* TODO - find something more cross browser */
            -webkit-line-clamp: 2;
            display: -webkit-box;
            -webkit-box-orient: vertical;
            color: grey;
        }

        .title {
            line-height: 1.6em;
            font-size: 1.2em;
            color: #333;
        }

    </ui:style>
    <design:MaterialPanel height="6em" backgroundColor="WHITE" padding="0" margin="0" shadow="1">
        <design:MaterialPanel height="100%" backgroundColor="GREEN" float="LEFT">
            <design:MaterialIcon iconSize="LARGE" backgroundColor="GREEN" textColor="WHITE" ui:field="image"/>
        </design:MaterialPanel>
        <design:MaterialPanel height="100%" padding="10">
            <design:MaterialButton float="RIGHT" type="FLOATING" backgroundColor="GREEN" textColor="WHITE" ui:field="action"></design:MaterialButton>
            <design:MaterialLabel addStyleNames="{style.title}" truncate="true" paddingLeft="10" ui:field="title"></design:MaterialLabel>
            <design:MaterialLabel addStyleNames="{style.pitch}" paddingLeft="10" ui:field="pitch"></design:MaterialLabel>
        </design:MaterialPanel>
    </design:MaterialPanel>
</ui:UiBinder>