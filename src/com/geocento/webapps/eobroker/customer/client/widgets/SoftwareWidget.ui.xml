<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:design="urn:import:gwt.material.design.client.ui"
        >
    <ui:style>

        .title {
            overflow: hidden;
            white-space: nowrap;
            text-overflow: ellipsis;
        }

        .description {
            overflow: hidden;
            line-height: 1.2em;
            height: 2.4em;
            /* TODO - find something more cross browser */
            -webkit-line-clamp: 2;
            display: -webkit-box;
            -webkit-box-orient: vertical;
            color: #ccc;
        }

        .companyLogo {
            position: absolute;
            right: auto !important;
            left: 10px !important;
            top: auto !important;
            bottom: 10px !important;
            max-width: 60px;
            max-height: 32px;
            margin-right: -16px;
            margin-top: -16px;
        }

        .actions {
/*
            white-space: nowrap;
            overflow: hidden;
*/
        }

        .stars > i {
            margin-right: 5px !important;
        }

    </ui:style>
    <design:MaterialCard backgroundColor="brown" axis="VERTICAL">
        <design:MaterialCardImage>
            <design:MaterialImage ui:field="image"></design:MaterialImage>
            <design:MaterialLink addStyleNames="{style.companyLogo}, z-depth-1" text="" ui:field="companyLogo"></design:MaterialLink>
        </design:MaterialCardImage>
        <design:MaterialCardContent textColor="white" padding="10">
            <design:MaterialLabel fontSize="1.2em" addStyleNames="{style.title}" ui:field="title"/>
            <design:MaterialLabel addStyleNames="{style.description}" ui:field="shortDescription"></design:MaterialLabel>
        </design:MaterialCardContent>
        <design:MaterialCardAction addStyleNames="{style.actions}" padding="10">
            <design:MaterialTooltip text="Favourited 0 times" ui:field="starsTooltip">
                <design:MaterialLink text="0" float="RIGHT" textColor="LIME" iconType="STAR" iconColor="LIME" marginRight="0" addStyleNames="{style.stars}" ui:field="stars"></design:MaterialLink>
            </design:MaterialTooltip>
            <design:MaterialLink text="INFO" textColor="white" ui:field="information"></design:MaterialLink>
        </design:MaterialCardAction>
    </design:MaterialCard>
</ui:UiBinder>