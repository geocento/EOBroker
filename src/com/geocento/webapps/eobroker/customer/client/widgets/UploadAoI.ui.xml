<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:design="urn:import:gwt.material.design.client.ui"
             xmlns:widgets="urn:import:com.geocento.webapps.eobroker.common.client.widgets">
    <design:MaterialModal type="FIXED_FOOTER" dismissable="true" inDuration="500" outDuration="500">
        <design:MaterialModalContent>
            <design:MaterialTitle title="Choose an AoI" ui:field="title"></design:MaterialTitle>
            <design:MaterialRow>
                <design:MaterialColumn grid="s12 m6 l8">
                    <design:MaterialLabel>Select from your saved AoIs</design:MaterialLabel>
                    <design:MaterialPanel padding="10" ui:field="listOfAoIs"></design:MaterialPanel>
                </design:MaterialColumn>
                <design:MaterialColumn grid="s12 m6 l4">
                    <design:MaterialLabel marginBottom="20">Upload a new one</design:MaterialLabel>
                    <widgets:MaterialFileUploader url="./test" maxFileSize="100" height="auto" width="auto" shadow="0" ui:field="uploadAoI">
                        <design:MaterialPanel layoutPosition="RELATIVE" padding="10" paddingBottom="50" backgroundColor="white">
                            <design:MaterialLabel ui:field="iconName" text="Upload a file" fontSize="1.2em" truncate="true"/>
                            <design:MaterialLabel ui:field="iconSize" text="Upload kml or shapefile (zip) with ONE polygon only. Polygon with more than 50 points will be automatically simplified." fontSize="0.8em"/>
                            <design:MaterialProgress ui:field="iconProgress" layoutPosition="ABSOLUTE" bottom="0" left="0" type="DETERMINATE" percent="0" />
                            <design:MaterialButton layoutPosition="ABSOLUTE" bottom="5" right="25" type="FLOATING" backgroundColor="pink" size="LARGE" iconType="CLOUD_UPLOAD" iconColor="white"/>
                        </design:MaterialPanel>
                    </widgets:MaterialFileUploader>
                </design:MaterialColumn>
            </design:MaterialRow>
        </design:MaterialModalContent>
        <design:MaterialModalFooter>
        </design:MaterialModalFooter>
    </design:MaterialModal>
</ui:UiBinder>