<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:bubble="urn:import:gwt.material.design.addins.client.bubble"
             xmlns:design="urn:import:gwt.material.design.client.ui">
    <ui:style>

        .bubble {
            max-width: none !important;
            width: 100%;
        }

    </ui:style>
    <bubble:MaterialBubble backgroundColor="WHITE" position="LEFT" addStyleNames="{style.bubble}">
        <design:MaterialLink fontSize="1.2em" iconType="NOTIFICATIONS" truncate="true" ui:field="title"></design:MaterialLink>
        <design:MaterialLabel fontSize="0.8em" ui:field="comment"></design:MaterialLabel>
    </bubble:MaterialBubble>
</ui:UiBinder>