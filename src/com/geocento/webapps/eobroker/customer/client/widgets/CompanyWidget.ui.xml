<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:design="urn:import:gwt.material.design.client.ui">
    <ui:style>

        .description {
            overflow: hidden;
            line-height: 1.2em;
            height: 2.4em;
            /* TODO - find something more cross browser */
            -webkit-line-clamp: 2;
            display: -webkit-box;
            -webkit-box-orient: vertical;
            color: #ccc;
        }

        .stars > i {
            margin-right: 5px !important;
        }

    </ui:style>
    <design:MaterialCard backgroundColor="blue-grey" axis="VERTICAL">
        <design:MaterialCardImage backgroundColor="white">
            <design:MaterialImage ui:field="image"></design:MaterialImage>
        </design:MaterialCardImage>
        <design:MaterialCardContent textColor="white" padding="10">
            <design:MaterialLabel fontSize="1.2em" ui:field="title"/>
            <design:MaterialLabel addStyleNames="{style.description}" ui:field="description"></design:MaterialLabel>
        </design:MaterialCardContent>
        <design:MaterialCardAction padding="10">
            <design:MaterialTooltip text="Favourited 0 times" ui:field="starsTooltip">
                <design:MaterialLink text="0" float="RIGHT" textColor="LIME" iconType="STAR" iconColor="LIME" marginRight="0" addStyleNames="{style.stars}" ui:field="stars"></design:MaterialLink>
            </design:MaterialTooltip>
            <design:MaterialLink text="INFO" textColor="white" ui:field="information"></design:MaterialLink>
        </design:MaterialCardAction>
    </design:MaterialCard>
</ui:UiBinder>