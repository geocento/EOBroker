<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:design="urn:import:gwt.material.design.client.ui">
    <design:MaterialCard backgroundColor="blue-grey" axis="VERTICAL">
        <design:MaterialCardImage waves="LIGHT">
            <design:MaterialImage ui:field="image"></design:MaterialImage>
        </design:MaterialCardImage>
        <design:MaterialCardContent>
            <design:MaterialLabel fontSize="1.5em" ui:field="title"/>
            <design:MaterialLabel ui:field="description"></design:MaterialLabel>
        </design:MaterialCardContent>
        <design:MaterialCardAction>
            <design:MaterialLink iconType="INFO" text="MORE INFORMATION" textColor="white" ui:field="information"></design:MaterialLink>
        </design:MaterialCardAction>
    </design:MaterialCard>
</ui:UiBinder>