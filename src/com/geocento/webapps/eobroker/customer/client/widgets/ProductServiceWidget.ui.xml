<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui' xmlns:design="urn:import:gwt.material.design.client.ui"
             xmlns:cutout="urn:import:gwt.material.design.addins.client.cutout">
    <ui:style>

        .title {
            overflow: hidden;
            white-space: nowrap;
            text-overflow: ellipsis;
        }

        .description {
            overflow: hidden;
            line-height: 1.2em;
            height: 2.4em;
            /* TODO - find something more cross browser */
            -webkit-line-clamp: 2;
            display: -webkit-box;
            -webkit-box-orient: vertical;
            color: #ccc;
        }

        .companyLogo {
            position: absolute;
            right: auto !important;
            left: 10px !important;
            top: auto !important;
            bottom: 10px !important;
            max-width: 60px;
            max-height: 32px;
            margin-right: -16px;
            margin-top: -16px;
        }

        .actions {
/*
            white-space: nowrap;
            overflow: hidden;
*/
        }

    </ui:style>
    <design:MaterialCard backgroundColor="blue-grey" axis="VERTICAL">
        <design:MaterialCardImage>
            <design:MaterialImage ui:field="image"></design:MaterialImage>
            <design:MaterialLink addStyleNames="{style.companyLogo}, z-depth-1" text="" ui:field="companyLogo"></design:MaterialLink>
        </design:MaterialCardImage>
        <design:MaterialCardContent textColor="white">
            <design:MaterialButton iconType="PLUS_ONE" iconColor="grey" backgroundColor="grey lighten-2" shadow="0" type="FLOATING" float="RIGHT"/>
            <design:MaterialLabel fontSize="1.5em" addStyleNames="{style.title}" ui:field="title"/>
            <design:MaterialLabel addStyleNames="{style.description}" ui:field="shortDescription"></design:MaterialLabel>
        </design:MaterialCardContent>
        <design:MaterialCardReveal>
            <design:MaterialLabel fontSize="1.4em" text="Description"/>
            <design:MaterialLabel ui:field="description"></design:MaterialLabel>
        </design:MaterialCardReveal>
        <design:MaterialCardAction addStyleNames="{style.actions}" ui:field="action">
            <design:MaterialLink visible="false" iconType="ASSESSMENT" text="CHECK" textColor="white" ui:field="check"></design:MaterialLink>
            <design:MaterialLink iconType="ASSESSMENT" text="QUOTE" textColor="white" ui:field="quote"></design:MaterialLink>
            <design:MaterialLink iconType="INFO" text="INFO" textColor="white" ui:field="information"></design:MaterialLink>
        </design:MaterialCardAction>
        <cutout:MaterialCutOut circle="true" opacity="0.9" textAlign="CENTER" ui:field="cutout">
            <design:MaterialTitle ui:field="cutoutTitle"></design:MaterialTitle>
            <design:MaterialButton text="Close" ui:field="close"></design:MaterialButton>
        </cutout:MaterialCutOut>
    </design:MaterialCard>
</ui:UiBinder>