<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui' xmlns:design="urn:import:gwt.material.design.client.ui"
             xmlns:cutout="urn:import:gwt.material.design.addins.client.cutout"
             xmlns:widgets="urn:import:com.geocento.webapps.eobroker.common.client.widgets">
    <ui:style>

        .title {
            overflow: hidden;
            white-space: nowrap;
            text-overflow: ellipsis;
        }

        .description {
            overflow: hidden;
            line-height: 1.2em;
            height: 2.4em;
            /* TODO - find something more cross browser */
            -webkit-line-clamp: 2;
            display: -webkit-box;
            -webkit-box-orient: vertical;
            color: #ccc;
        }

        .companyLogo {
            position: absolute;
            right: auto !important;
            left: 10px !important;
            top: auto !important;
            bottom: -5px !important;
            max-width: 50px;
            margin-right: -16px;
            margin-top: -16px;
        }

        .actions {
/*
            white-space: nowrap;
            overflow: hidden;
*/
        }

        .stars > i {
            margin-right: 5px !important;
        }

        .image {
            cursor: pointer;
        }

    </ui:style>
    <ui:with field="res" type="com.geocento.webapps.eobroker.common.client.styles.StyleResources"></ui:with>
    <design:MaterialCard axis="VERTICAL">
        <design:MaterialCardImage>
            <widgets:MaterialImageLoading addStyleNames="{style.image}" ui:field="imagePanel"></widgets:MaterialImageLoading>
            <design:MaterialLink addStyleNames="{style.companyLogo}, z-depth-1" text="" ui:field="companyLogo"></design:MaterialLink>
        </design:MaterialCardImage>
        <design:MaterialCardContent textColor="WHITE" padding="10">
            <design:MaterialLabel fontSize="1.2em" addStyleNames="{style.title}" ui:field="title"/>
            <design:MaterialLabel addStyleNames="{style.description}" ui:field="shortDescription"></design:MaterialLabel>
        </design:MaterialCardContent>
        <design:MaterialCardAction addStyleNames="{style.actions}" padding="10">
            <design:MaterialLink text="INFO" textColor="WHITE" ui:field="info"></design:MaterialLink>
            <design:MaterialTooltip text="Evaluate feasibility of bespoke service">
                <design:MaterialLink text="" iconType="EXPLORE" textColor="WHITE" float="RIGHT" ui:field="explore"></design:MaterialLink>
            </design:MaterialTooltip>
            <design:MaterialTooltip text="Explore product samples in new window">
                <design:MaterialLink text="" iconType="VIEW_LIST" textColor="WHITE" float="RIGHT" ui:field="samples"></design:MaterialLink>
            </design:MaterialTooltip>
        </design:MaterialCardAction>
    </design:MaterialCard>
</ui:UiBinder>